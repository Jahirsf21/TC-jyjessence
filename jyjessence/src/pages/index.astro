---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const perfumes = await getCollection('perfumes');

---

<Layout title="Home">
	<main>
		<h1 class="text-center text-7xl font-extrabold">JYJ Essence
			<span class="block">perfumes</span></h1>

	</main>
	<section aria-label = "Perfumes recomendados para salir a la calle">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class ="grid gap-6 md:grid-cols-2">
				{
					perfumes.map(perfume => {
						const { slug, data} = perfume;
						const { title,gender,description, img } = data;
						return (
							<article class="flex">
								<a href={`/perfume/${slug}`} class=" mb-2 xl:mb-0 transition hover:scale-110">
									<img src={`/${img}`} alt={title} class="w-full rounded-lg"/>

								</a>
								<div class="flex flex-col justify-center">
									<h2 class="mb-2 text-2xl font-bold leading-tight text-white">
										{title}
									</h2>
									<p class="mb-4 text-gray-300">{description}</p>
									<span class="text-xs">Genero {gender}</span>
									
								</div>
							</article>
						)

					})
				}
			</div>
		</div>
	</section>
</Layout>

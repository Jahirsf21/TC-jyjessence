---
import Layout from '../layouts/Layout.astro';
import SearchComponent from '../components/search-component.astro';
import { getCollection } from 'astro:content';
const perfumes = await getCollection('perfumes');
---
<Layout>
  <main>
    <SearchComponent />
    <section class="business-face-section">
      <a href="https://www.instagram.com/jyj.essence/" target="_blank" rel="noopener noreferrer" style="display: inline-block;">
        <img src="/jyjessence.png" alt="JYJ Essence Logo" class="logo-hero mb-6" />
      </a>
      <a href="https://www.instagram.com/jyj.essence/" target="_blank" rel="noopener noreferrer" style="text-decoration: none; color: inherit;">
        <h1 class="text-5xl md:text-7xl font-extrabold title-fancy hero-title">JYJ Essence</h1>
      </a>
      <a href="https://www.instagram.com/jyj.essence/" target="_blank" rel="noopener noreferrer" style="text-decoration: none; color: inherit;">
        <p class="hero-subtitle">Descubre la esencia de tu personalidad</p>
      </a>
    </section>

    {perfumes.map((perfume, indice) => {
      const esPar = indice % 2 === 0;
      const { data } = perfume;
      const { title, category, gender, description, price, img } = data;
      return (
        <section class={`py-12 md:py-20 ${esPar ? 'section-even' : 'section-odd'}`} data-gender={gender}> 
          <div class="container mx-auto px-4 perfume-grid">
            {esPar ? (
              <>
                <div class="img-col">
                  <img src={img} alt={title} class="w-full h-auto object-cover rounded-lg shadow-lg" style="max-height: 400px;" />
                </div>
                <div class="text-content">
                  <h2 class="title-fancy text-3xl md:text-5xl mb-2">{title}</h2>
                  <p class="subtitle-text text-left mx-0">{description}</p>
                  <div class="perfume-meta mt-2">
                    <span class="perfume-category">{category}</span>
                    <span class="perfume-gender">{gender}</span>
                    <span class="perfume-price">₡{price.toLocaleString('en-US', { maximumFractionDigits: 2 })}</span>
                  </div>
                </div>
              </>
            ) : (
              <>
                <div class="text-content">
                  <h2 class="title-fancy text-3xl md:text-5xl mb-2">{title}</h2>
                  <p class="subtitle-text text-left mx-0">{description}</p>
                  <div class="perfume-meta mt-2">
                    <span class="perfume-category">{category}</span>
                    <span class="perfume-gender">{gender}</span>
                    <span class="perfume-price">₡{price.toLocaleString('en-US', { maximumFractionDigits: 2 })}</span>
                  </div>
                </div>
                <div class="img-col">
                  <img src={img} alt={title} class="w-full h-auto object-cover rounded-lg shadow-lg" style="max-height: 400px;" />
                </div>
              </>
            )}
          </div>
        </section>
      );
    })}

    <footer class="footer">
      <div class="container mx-auto px-4 footer-content">
        <p>&copy; 2025 JYJ Essence.</p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&family=Playfair+Display:wght@400;700;900&display=swap');
  
:root {
  --color-dark2: #1a1a2e;
  background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
  background-attachment: fixed;
}

  body {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
    background-attachment: fixed;
    color: var(--color-text);
    font-family: 'Montserrat', sans-serif;
  }

  .title-fancy {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
  }

  .subtitle-text {
    font-size: 1rem;
    color: #374252;
    max-width: 400px;
    margin: 1rem auto;
    text-align: justify;
    line-height: 1.8;
  }

  .business-face-section {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-purple) 0%, var(--color-blue) 50%, var(--color-teal) 100%);
    text-align: center;
    position: relative;
    overflow: hidden;
    padding: 2rem;
  }

  .business-face-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .logo-hero {
    width: 260px;
    height: auto;
    display: block;
    margin-left: auto;
    margin-right: auto;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
    position: relative;
    z-index: 1;
    transition: box-shadow 0.35s cubic-bezier(0.4,0,0.2,1), filter 0.35s cubic-bezier(0.4,0,0.2,1), transform 0.35s cubic-bezier(0.4,0,0.2,1);
    cursor: default;
  }

  .logo-hero:hover {
    filter: drop-shadow(0 16px 40px rgba(99,102,241,0.18));
    transform: translateY(-6px) scale(1.025);
  }

  .hero-title {
    text-align: center;
    margin-top: 1rem;
    font-size: 3rem;
    font-weight: 900;
    color: #fff;
    text-shadow: 0 2px 12px rgba(0,0,0,0.7), 0 0px 2px rgba(0,0,0,0.5);
    letter-spacing: 2px;
    position: relative;
    z-index: 1;
    cursor: default;
    transition: filter 0.35s cubic-bezier(0.4,0,0.2,1), transform 0.35s cubic-bezier(0.4,0,0.2,1);
  }

  .hero-title:hover {
    filter: drop-shadow(0 16px 40px rgba(99,102,241,0.18));
    transform: translateY(-6px) scale(1.025);
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 6rem;
    }
    .logo-hero {
      width: 400px;
    }
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: #fff;
    font-weight: 600;
    letter-spacing: 1px;
    margin-top: 1rem;
    text-shadow: 0 2px 12px rgba(0,0,0,0.7), 0 0px 2px rgba(0,0,0,0.5);
    position: relative;
    z-index: 1;
    transition: filter 0.35s cubic-bezier(0.4,0,0.2,1), transform 0.35s cubic-bezier(0.4,0,0.2,1);
    cursor: default;
  }

  .hero-subtitle:hover {
    filter: drop-shadow(0 16px 40px rgba(99,102,241,0.18));
    transform: translateY(-6px) scale(1.025);
  }

  @media (min-width: 768px) {
    .hero-subtitle {
      font-size: 1.5rem;
    }
  }

  .section-even, .section-odd {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    margin: 50px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.35s cubic-bezier(0.4,0,0.2,1), transform 0.35s cubic-bezier(0.4,0,0.2,1), background 0.35s cubic-bezier(0.4,0,0.2,1);
  }

  .section-even:hover, .section-odd:hover {
    box-shadow: 0 12px 40px 0 rgba(30,41,59,0.18), 0 2px 8px 0 rgba(99,102,241,0.10);
    transform: translateY(-6px) scale(1.012);
    z-index: 2;
  }

  .perfume-grid {
    display: grid;
    grid-template-columns: 1fr;
    align-items: stretch;
    gap: 2rem;
  }

  .img-col {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  @media (min-width: 768px) {
    .perfume-grid {
      grid-template-columns: 1fr 1fr;
    }
    .img-col {
      align-items: start;
      justify-content: center;
    }
    .text-content {
      text-align: left;
      padding: 3rem;
    }
  }

  .text-content {
    padding: 2rem;
    text-align: center;
  }

  .perfume-meta {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    font-size: 1.1rem;
    font-weight: 500;
    color: #6366f1;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
    width: 100%;
  }
  .perfume-meta span {
    text-align: left;
  }
  .perfume-gender {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
    color: #ffffff;
    padding: 0.2em 0.7em;
    border-radius: 8px;
    font-size: 0.95em;
    font-weight: 600;
    letter-spacing: 1px;
  }
  .perfume-category {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
    color: #ffffff;
    padding: 0.2em 0.7em;
    border-radius: 8px;
    font-size: 0.95em;
    font-weight: 600;
    letter-spacing: 1px;
  }
  .perfume-price {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
    color: #ffffff;
    padding: 0.2em 0.7em;
    border-radius: 8px;
    font-size: 0.95em;
    font-weight: 600;
    letter-spacing: 1px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .footer {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark2) 100%);
    background-attachment: fixed;
    color: white;
    padding: 3rem 0;
    margin-top: 0;
  }

  .footer-content {
    text-align: center;
  }

  .footer p {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0;
  }

  html {
    scroll-behavior: smooth;
  }


  @media (max-width: 480px) {
    .business-face-section {
      padding: 1rem;
      min-height: 40vh;
    }
    .logo-hero {
      width: 150px;
      margin-bottom: 1rem;
    }
    .hero-title {
      font-size: 2rem;
      margin-top: 0.5rem;
    }
    .hero-subtitle {
      font-size: 1rem;
      margin-top: 0.5rem;
    }
    .section-even, .section-odd {
      margin: 10px;
      padding: 0.5rem;
    }
    .text-content {
      padding: 1rem;
    }
    .perfume-meta {
      flex-direction: column;
      gap: 0.5rem;
      font-size: 0.95rem;
    }
  }

  @media (max-width: 375px) {
    .logo-hero {
      width: 110px;
    }
    .hero-title {
      font-size: 1.3rem;
    }
    .hero-subtitle {
      font-size: 0.9rem;
    }
    .text-content {
      padding: 0.5rem;
    }
    .section-even, .section-odd {
      margin: 2px;
      padding: 0.2rem;
    }
  }
</style>